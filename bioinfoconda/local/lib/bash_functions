# define logging functions
function bug()
{
	>&2 echo "BUG: $1"
	exit 99
}
function error()
{
	>&2 echo "ERROR: $1"

	re='^[0-9]+$'
	if ! [[ $2 =~ $re ]] ; then
		bug "argument to error() is not a number."
	else
		exit $2
	fi
}
function warn()
{
	>&2 echo "WARNING: $1"
}
function info()
{
	>&2 echo "INFO: $1"
}
